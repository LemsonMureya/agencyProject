{
    "phases": {
      "install": {
        "nixPkgs": ["python311"],
        "cmds": [
          "python -m ensurepip --upgrade",
          "python -m pip install --no-cache-dir -r requirements.txt"
        ]
      },
      "build": {
        "cmds": [
          "python manage.py collectstatic --noinput"
        ]
      },
      "start": {
        "cmd": "python manage.py migrate && gunicorn Aximo.wsgi:application --bind 0.0.0.0:$PORT"
      }
    }
  }